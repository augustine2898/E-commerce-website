<%- include("../partials/user/header") %>

<main class="main">
    <div class="container">
        <h2 class="text-center mb-4">Edit Profile</h2>

        <!-- Profile Edit Form -->
        <form id="editProfileForm" method="POST">
            <div class="row">
                <!-- Username -->
                <div class="col-md-6 form-group mb-3">
                    <label for="name" class="form-label">Username</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= user.name %>" required>
                    <small id="nameError" class="form-text text-danger" style="display: none;"></small>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6 form-group mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="text" name="phone" id="phone" class="form-control" value="<%= user.phone %>" required>
                    <small id="phoneError" class="form-text text-danger" style="display: none;"></small>
                </div>
            </div>

            <!-- Update Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Update Profile</button>
            </div>
        </form>
    </div>
</main>

<%- include("../partials/user/footer") %>

<!-- Include SweetAlert and custom JS file -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/user/editprofile.js"></script>
