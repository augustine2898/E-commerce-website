<%- include("../partials/user/header") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="/css/user/signup.css">
<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center fw-bolder">Enter Your Email</h2>
                    <form id="emailForm" action="/change-password" method="post" onsubmit="return validateForm()">
                        <div class="form-group">
                            <input class="form-control" id="email" name="email" placeholder="Email" />
                            <div class="error-message" id="email-error"></div>
                        </div>
                        <div class="text-danger text-center" id="server-error-message">
                            <% if (message) { %>
                                <%= message %>
                            <% } %>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-success mt-3">Verify</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script src="/js/user/password.js"></script>
